<%= link_to 'Back', bills_path %>

<div class="row">
	<div class="col-md-offset-2 col-md-8">
		<div class="panel panel-default"> 
			<div class="panel-heading center">
				<%= image_tag @bill.cover.url(:medium) %>
				<p><%= @bill.title %></p>
			</div>
			<div class="panel-body">
				<p>
					<strong>Category:</strong>
				  <%= @bill.category %>
				</p>
				<p>
				  <strong>Summary:</strong>
				  <%= @bill.summary %>
				</p>
				  <strong>Legislation:</strong>
				  <%= @bill.description %>
				</p>
				<div class = "Votes">
        	Current Score: <%= @bill.score %> <br>
        	For: <%= @bill.for %> <br>
        	Against: <%= @bill.against %>
      	</div>
				<% if user_signed_in? %>
	        <div class="actions">
	          <%= link_to "Yes", for_bill_path(@bill), method: :put %>
	          <%= link_to "No", against_bill_path(@bill), method: :put %>
	        </div>
	      <% else %>
	        <%= link_to "Log in to Vote", new_user_session_path %>
	      <% end %>
			</div>
		</div>
	</div>
</div>
<%= link_to 'Edit', edit_bill_path(@bill) %> <-Will only show up for admins